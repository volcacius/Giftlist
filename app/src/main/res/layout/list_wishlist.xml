<?xml version="1.0" encoding="utf-8"?>
<!-- NOTE: should use FrameLayout or RelativeLayout for parent of the "@id/container" view (for Android 2.3 compatibility) -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UselessParent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/card_margin"
            android:elevation="3dp"
            card_view:cardCornerRadius="@dimen/card_wishlist_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- NOTE: the drag handle should set android:clickable=true not to propagate click events to the parent views -->
                <View
                    android:id="@+id/drag_handle"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|left"
                    android:background="@color/colorAccent"
                    android:clickable="true"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/wishlist_image_height"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/wishlist_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/thumbnail"
                        android:paddingLeft="@dimen/wishlist_title_padding"
                        android:paddingRight="@dimen/wishlist_title_padding"
                        android:paddingTop="@dimen/wishlist_title_padding"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/wishlist_title" />

                    <TextView
                        android:id="@+id/occasion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/wishlist_name"
                        android:paddingBottom="@dimen/products_count_padding_bottom"
                        android:paddingLeft="@dimen/wishlist_title_padding"
                        android:paddingRight="@dimen/wishlist_title_padding"
                        android:textSize="@dimen/wishlist_subtitle" />

                    <ImageView
                        android:id="@+id/overflow"
                        android:layout_width="@dimen/ic_wishlist_overflow_width"
                        android:layout_height="@dimen/ic_wishlist_overflow_height"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/thumbnail"
                        android:layout_marginTop="@dimen/ic_wishlist_overflow_margin_top"
                        android:src="@drawable/ic_more_vert_black_18dp"
                        android:scaleType="centerCrop" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/selected_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"/>

        </android.support.v7.widget.CardView>

    </FrameLayout>

</FrameLayout>