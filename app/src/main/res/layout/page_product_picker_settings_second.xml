<?xml version="1.0" encoding="utf-8"?>
<com.redbooth.WelcomePageLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/product_picker_settings_page_second"
    tools:background="@color/material_purple_500">

    <TextView
        style="@style/text_title"
        android:id="@+id/gift_recipient"
        android:text="@string/tell_us_something_about_your_gift_recipient"
        android:layout_above="@+id/improve_suggestions"
        app:view_behavior=".presentation.view.animation.ParallaxTitleBehaviour" />

    <TextView
        style="@style/text_subtitle"
        android:id="@+id/improve_suggestions"
        android:text="@string/how_old_is_he_or_she"
        app:view_behavior=".presentation.view.animation.ParallaxTitleBehaviour" />

    <RelativeLayout
        android:layout_below="@id/improve_suggestions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_age"
            android:hint="Select an age group"
            android:layout_below="@+id/grid"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/white"
            android:popupBackground="@color/colorPrimaryDark"
            app:met_floatingLabel="highlight"
            app:met_textColorHint="@color/white"
            app:met_primaryColor="@color/colorAccent"/>

    </RelativeLayout>

</com.redbooth.WelcomePageLayout>
