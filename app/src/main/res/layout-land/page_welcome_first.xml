<?xml version="1.0" encoding="utf-8"?>

<com.redbooth.WelcomePageLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/welcome_page_land"
    tools:background="@color/material_purple_600">

    <RelativeLayout
        android:id="@+id/image_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:id="@+id/gift_icon"
        />

    </RelativeLayout>

    <TextView
        style="@style/text_title"
        android:id="@+id/title"
        android:layout_above="@+id/subtitle"
        android:layout_alignTop="@id/image_wrapper"
        android:layout_toRightOf="@+id/image_wrapper"
        android:text="Welcome to Giftlist"
        app:view_behavior=".presentation.view.animation.ParallaxTitleBehaviour" />

    <TextView
        style="@style/text_subtitle"
        android:id="@+id/subtitle"
        android:layout_alignBottom="@id/image_wrapper"
        android:layout_toRightOf="@+id/image_wrapper"
        android:text="Easily find and organize \ngift lists for your loved ones."
        app:view_behavior=".presentation.view.animation.ParallaxSubtitleBehaviour" />

</com.redbooth.WelcomePageLayout>