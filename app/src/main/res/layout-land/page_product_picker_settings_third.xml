<?xml version="1.0" encoding="utf-8"?>
<com.redbooth.WelcomePageLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    style="@style/product_picker_settings_page_third"
    tools:background="@color/material_purple_400">

    <TextView
        style="@style/text_title"
        android:id="@+id/gift_recipient_second"
        android:text="@string/tell_us_something_about_your_gift_recipient"
        android:layout_above="@+id/improve_suggestions_second"
        app:view_behavior=".presentation.view.animation.ParallaxTitleBehaviour" />

    <TextView
        style="@style/text_subtitle"
        android:id="@+id/improve_suggestions_second"
        android:text="@string/what_does_he_or_she_likes"
        app:view_behavior=".presentation.view.animation.ParallaxTitleBehaviour" />

    <RelativeLayout
        android:layout_below="@id/improve_suggestions_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <android.support.v7.widget.GridLayout

            android:id="@+id/grid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="4dp"

            grid:alignmentMode="alignBounds"
            grid:columnCount="3"
            grid:rowOrderPreserved="false"
            grid:useDefaultMargins="true">

            <CheckBox
                grid:layout_columnWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:theme="@style/CheckBoxTheme"
                android:id="@+id/checkbox_handcraft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_handcraft"
                android:textColor="@color/white" />

            <CheckBox
                grid:layout_columnWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:theme="@style/CheckBoxTheme"
                android:id="@+id/checkbox_sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_sports"
                android:textColor="@color/white"/>

            <CheckBox
                grid:layout_columnWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:theme="@style/CheckBoxTheme"
                android:id="@+id/checkbox_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_games"
                android:textColor="@color/white"/>

            <CheckBox
                grid:layout_columnWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:theme="@style/CheckBoxTheme"
                android:id="@+id/checkbox_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_art"
                android:textColor="@color/white"/>

            <CheckBox
                grid:layout_columnWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:theme="@style/CheckBoxTheme"
                android:id="@+id/checkbox_technology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_technology"
                android:textColor="@color/white"/>

            <CheckBox
                grid:layout_columnWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:theme="@style/CheckBoxTheme"
                android:id="@+id/checkbox_travelling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_travelling"
                android:textColor="@color/white"/>

            <CheckBox
                grid:layout_columnWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:theme="@style/CheckBoxTheme"
                android:id="@+id/checkbox_books"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_books"
                android:textColor="@color/white"/>

            <CheckBox
                grid:layout_columnWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:theme="@style/CheckBoxTheme"
                android:id="@+id/checkbox_nerd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_nerd"
                android:textColor="@color/white"/>

            <CheckBox
                grid:layout_columnWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:theme="@style/CheckBoxTheme"
                android:id="@+id/checkbox_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_music"
                android:textColor="@color/white"/>
        </android.support.v7.widget.GridLayout>

    </RelativeLayout>

</com.redbooth.WelcomePageLayout>
